<div class="each">
  <%= @post.title %>
  <%= @post.body %>
      <% if @comments.any? %>
      <h3>Comments (<%= @comments.count %>)</h3>
      <% @comments.each do |comment| %>
      <ol class ="individual">
        <%= comment.title %>
        <%= comment.body %>
        </ol>
      <% end %>
     <% end %>
  <%= link_to "All Posts", {:controller => "posts", :action => "index"} %>
  <%= link_to "Delete Post", {:controller => "posts", :action => "destroy", :id => @post.id}, :method=>:delete %>
  <%= link_to "Add a Comment", {:controller => "comments", :action => "new", :id => @post.id} %>



</div>