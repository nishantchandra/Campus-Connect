<%= form_for :post, url: posts_path, class: "form-horizontal" do |f| %>
<form class="form-horizontal">
<div class ="form-group">
  <%= f.label :title, class: "col-lg-2 control-label" %>
  <%= f.text_field :title %>
 </div>
   <div class="form-group">
  <%= f.label :body, class: "col-lg-2 control-label" %>
  <%= f.text_field :body %>
  </div>
    <div class="form-group">
    <%= f.label :email, class: "col-lg-2 control-label" %>
    <%= f.text_field :email %>
    </div>
  <%= hidden_field_tag 'college_id', @college_id  %>
<p><%= f.submit %></p>
<% end %>
</form>