<%= form_for :comments, url: comments_path, method: :post, class: "form-horizontal" do |f| %>
<form class="form-horizontal">
<div class ="form-group">
  <%= f.label :title, class: "col-lg-2 control-label" %>
  <%= f.text_field :title %>
 </div>
   <div class="form-group">
  <%= f.label :body, class: "col-lg-2 control-label" %>
  <%= f.text_field :body %>
  </div>
    <%= hidden_field_tag 'posts_id', @posts_id  %>
    <%= hidden_field_tag 'college_id', @college_id  %>
<p><%= f.submit %></p>
<% end %>
</form>